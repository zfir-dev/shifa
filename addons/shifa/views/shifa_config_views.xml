<odoo>
    <record id="view_shifa_config_form" model="ir.ui.view">
        <field name="name">shifa.config.form</field>
        <field name="model">shifa.config</field>
        <field name="arch" type="xml">
            <form string="SHIFA Configuration">
                <sheet>
                    <group>
                        <field name="medical_fund_amount"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="committee_notification_emails"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_shifa_config" model="ir.actions.act_window">
        <field name="name">Configuration</field>
        <field name="res_model">shifa.config</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>
</odoo>
