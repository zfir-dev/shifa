<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_account_payment_register_form_inherit" model="ir.ui.view">
    <field name="name">account.payment.register.form.inherit.shifa</field>
    <field name="model">account.payment.register</field>
    <field name="inherit_id" ref="account.view_account_payment_register_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='journal_id']" position="after">
        <field name="payment_reference_notes" placeholder="e.g., Juice TXN #123456, Bank Transfer Ref: ABC789, etc." string="Payment Reference Notes"/>
      </xpath>
    </field>
  </record>
</odoo>

