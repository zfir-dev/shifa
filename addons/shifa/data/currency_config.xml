<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="1">
    <!-- Activate MUR Currency -->
    <record id="base.MUR" model="res.currency">
      <field name="active">True</field>
    </record>

    <!-- Set Company Currency to MUR -->
    <function model="res.company" name="write">
      <value eval="[ref('base.main_company')]"/>
      <value eval="{'currency_id': ref('base.MUR')}"/>
    </function>
  </data>
</odoo>

